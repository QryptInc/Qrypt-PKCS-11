{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // LSAN needs ptrace which is not available for our current debug setups. There
    // are work-arounds:
    // https://stackoverflow.com/questions/54022889/leaksanitizer-not-working-under-gdb-in-ubuntu-18-04
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch qryptoki_gtests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/gtests/qryptoki_gtests",
            "args": [
                // "--gtest_filter=*ValidRequestBasic*",
                "--gtest_output=xml:qryptoki_gtests.xml"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [ 
                {"name": "QRYPT_EAAS_TOKEN", "value": "<put your Qrypt token scoped to entropy here>" },
                {"name": "QRYPT_BASE_HSM_PATH", "value": "/usr/local/lib/softhsm/libsofthsm2.so" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
        },
        {
            "name": "(gdb) Launch integration tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/integration-tests/build/run_tests",
            "args": [
                // "--gtest_filter=*ValidRequestBasic*",
                "--gtest_output=xml:integration_gtests.xml"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/integration-tests/build",
            "environment": [ 
                {"name": "QRYPT_EAAS_TOKEN", "value": "<put your Qrypt token scoped to entropy here>" },
                {"name": "QRYPT_BASE_HSM_PATH", "value": "/usr/local/lib/softhsm/libsofthsm2.so" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
        },
    ]
}
